{
    "name": "@aspect/caliper",
    "version": "0.1.0",
    "description": "Browser-based measurement tool overlay",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "author": "Daniel Oyerinde <oyerinde.daniel@yahoo.com> (https://danieloyerinde.com)",
    "homepage": "https://github.com/oyerindedaniel/caliper#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oyerindedaniel/caliper.git",
        "directory": "packages/caliper"
    },
    "bugs": {
        "url": "https://github.com/oyerindedaniel/caliper/issues"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./iife": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.global.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup --env.NODE_ENV production",
        "build:watch": "tsup --watch",
        "lint": "eslint . --max-warnings 0",
        "check-types": "tsc --noEmit",
        "clean": "tsup --clean"
    },
    "keywords": [
        "caliper",
        "measurement",
        "overlay",
        "devtools",
        "design-tool",
        "pixel-perfect",
        "react",
        "vue",
        "solid",
        "svelte",
        "nextjs",
        "nuxt",
        "astro",
        "tanstack-start",
        "browser-tools"
    ],
    "license": "Polyform-Shield-1.0.0",
    "devDependencies": {
        "@babel/core": "^7.24.0",
        "@babel/preset-typescript": "^7.28.5",
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/node": "^22.15.3",
        "babel-preset-solid": "^1.9.10",
        "esbuild-plugin-babel": "^0.2.3",
        "eslint": "^9.39.1",
        "tsup": "^8.5.1",
        "typescript": "5.9.3"
    },
    "dependencies": {
        "@caliper/core": "workspace:*",
        "@caliper/overlay": "workspace:*",
        "solid-js": "^1.9.10"
    }
}