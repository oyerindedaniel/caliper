{
  "name": "caliper",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:playground": "turbo run dev --filter=playground",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules",
    "test": "echo \"Tests coming soon\"",
    "caliper:build": "turbo run build --filter=@aspect/caliper",
    "version:write": "node scripts/write-version.mjs",
    "caliper:validate-web": "turbo run build --filter=@oyerinde/caliper... && pnpm --filter @oyerinde/caliper run pack:prod && turbo run build --filter=web"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}